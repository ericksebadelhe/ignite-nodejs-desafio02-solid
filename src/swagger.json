{
  "openapi": "3.0.0",
  "info": {
    "title": "Ignite NodeJS - Challenge II Documentation",
    "description": "API created during Ignite NodeJS - Chapter II",
    "version": "1.0.0",
    "contact": {
      "email": "ericksebadelhe@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "johndoe@user.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "7d32739e-b20f-4ed5-b922-0c7cebd733b4",
                    "name": "John Doe",
                    "admin": false,
                    "email": "johndoe@user.com",
                    "created_at": "2021-04-05T22:22:24.683Z",
                    "updated_at": "2021-04-05T22:22:24.683Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already in use",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Email already in use"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "List all users",
        "description": "List all users",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "timestamp"
                      },
                      "updated_at": {
                        "type": "timestamp"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User is not an admin"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Set user to admin",
        "description": "Set user to admin",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "timestamp"
                    },
                    "updated_at": {
                      "type": "timestamp"
                    }
                  }
                },
                "example": {
                  "id": "7d32739e-b20f-4ed5-b922-0c7cebd733b4",
                  "name": "John Doe",
                  "admin": true,
                  "email": "johndoe@user.com",
                  "created_at": "2021-04-05T22:22:24.683Z",
                  "updated_at": "2021-04-05T22:22:24.683Z"
                }
              }
            }
          },
          "404": {
            "description": "User does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User does not exist"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Show user profile",
        "description": "Show user profile",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "timestamp"
                    },
                    "updated_at": {
                      "type": "timestamp"
                    }
                  }
                },
                "example": {
                  "id": "7d32739e-b20f-4ed5-b922-0c7cebd733b4",
                  "name": "John Doe",
                  "admin": false,
                  "email": "johndoe@user.com",
                  "created_at": "2021-04-05T22:22:24.683Z",
                  "updated_at": "2021-04-05T22:22:24.683Z"
                }
              }
            }
          },
          "404": {
            "description": "User does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User does not exist"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
